{
  "name": "@marceloemmerich/mite-mcp",
  "version": "0.1.1",
  "description": "Model Context Protocol server for mite time tracking API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mite-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "coverage:open": "open coverage/index.html",
    "coverage:check": "vitest --coverage --coverage.enabled=true",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "check": "biome check . && tsc --noEmit",
    "prepublishOnly": "npm run check && npm run test:coverage && npm run build",
    "deploy:staging": "echo 'Manual deployment only - run npm publish --tag beta'",
    "deploy:production": "echo 'Manual deployment only - run npm publish'"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mite",
    "time-tracking",
    "api"
  ],
  "author": "Marcelo Emmerich",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marceloemmerich/mite-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/marceloemmerich/mite-mcp/issues"
  },
  "homepage": "https://github.com/marceloemmerich/mite-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "dotenv": "^17.2.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/node": "^24.0.13",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
